<?xml version="1.0" encoding="UTF-8"?>
<web-app>
<display-name>Obank</display-name>
<description>Obank</description>

  <welcome-file-list>
      <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <servlet>  
    <servlet-name>home</servlet-name>  
    <servlet-class>Home</servlet-class>
    <load-on-startup>0</load-on-startup> 
  </servlet>
  <servlet>
    <servlet-name>open-account</servlet-name>
    <servlet-class>OpenAccount</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>welcome</servlet-name>
    <servlet-class>Welcome</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>about</servlet-name>
    <servlet-class>About</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>Login</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>Logout</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>checkBalance</servlet-name>
    <servlet-class>CheckBalance</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>moneyTransfer</servlet-name>
    <servlet-class>MoneyTransfer</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>staff-login</servlet-name>
    <servlet-class>StaffLogin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>staff-operations</servlet-name>
    <servlet-class>StaffOperations</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>loans</servlet-name>
    <servlet-class>Loans</servlet-class>
  </servlet>


  <servlet-mapping>  
    <servlet-name>home</servlet-name>
    <url-pattern>/home</url-pattern>  
  </servlet-mapping>
  <servlet-mapping>  
    <servlet-name>open-account</servlet-name>
    <url-pattern>/open-account</url-pattern>  
  </servlet-mapping>
  <servlet-mapping>  
    <servlet-name>welcome</servlet-name>
    <url-pattern>/welcome</url-pattern>  
  </servlet-mapping>
  <servlet-mapping>  
    <servlet-name>about</servlet-name>
    <url-pattern>/about</url-pattern>  
  </servlet-mapping>
  <servlet-mapping>  
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>  
  </servlet-mapping>
  <servlet-mapping>  
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>  
  </servlet-mapping>
  <servlet-mapping>  
    <servlet-name>checkBalance</servlet-name>
    <url-pattern>/check-balance</url-pattern>  
  </servlet-mapping>
  <servlet-mapping>  
    <servlet-name>moneyTransfer</servlet-name>
    <url-pattern>/money-transfer</url-pattern>  
  </servlet-mapping>
  <servlet-mapping>  
    <servlet-name>staff-login</servlet-name>
    <url-pattern>/staff-login</url-pattern> 
  </servlet-mapping>
  <servlet-mapping>  
    <servlet-name>staff-operations</servlet-name>
    <url-pattern>/staff-operations</url-pattern>
  </servlet-mapping>
  <servlet-mapping>  
    <servlet-name>loans</servlet-name>
    <url-pattern>/loans</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>404</error-code>
    <location>/error-pg.html</location>
  </error-page>
</web-app>